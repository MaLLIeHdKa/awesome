!------------------------------------------------------------------------------
! XFT Settings
     
Xft.dpi:                                        96
Xft.antialias:                                  true
Xft.rgba:                                       rgb
Xft.hinting:                                    true
Xft.hintstyle:                                  hintslight


URxvt.perl-ext-common:  default,matcher,vtwheel
URxvt.url-launcher:      /usr/bin/luakit
URxvt.matcher.button:   1


URxvt.depth: 32
URxvt.saveLines: 12000
!URxvt.background: [92]#091114

!------------------------------------------------------------------------------
! URXVT - Settings

URxvt*geometry:                                 80x25
URxvt*foreground:                               white
URxvt*background:                               [95]#151515
URxvt*borderLess:                               false
URxvt*scrollBar:                                false
URxvt*cursorBlink:                              true
URxvt*cursorUnderline:                          true
URxvt*cursorColor:                              #ffffff
URxvt*scrollColor:                              #151515
URxvt*perl-ext-common:                          default,clipboard,url-select,keyboard-select,vtwheel
URxvt*font:                                     xft:terminusmodx:hinting=true:pixelsize=7:antialias=false
URxvt*boldFont:                                 xft:terminusmodx:style=bold:hinting=true:pixelsize=7:antialias=false
URxvt*italicFont:                               xft:terminusmodx:style=italic:hinting=true:pixelsize=7:antialias=false
URxvt*boldItalicFont:                           xft:terminusmodx:style=bolditalic:hinting=true:pixelsize=7:antialias=false
URxvt.underlineURLs:                            true
URxvt.url-select.launcher:                      /usr/bin/luakit
URxvt.url-select.underline:                     true

